<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.picoloid">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/owl"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/owl_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity android:name=".source.activity.ButtonEditorActivity" android:screenOrientation="landscape" ></activity>
        <activity
            android:name=".source.activity.SettingsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".source.activity.VideoPlayerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".source.activity.PageActivityUser"
            android:screenOrientation="landscape" />
        <activity
            android:name=".source.activity.PageActivityEditor"
            android:screenOrientation="landscape" />
        <activity
            android:name=".source.activity.ImageActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".source.activity.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>