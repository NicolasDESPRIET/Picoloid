<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".source.activity.SettingsActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="93dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/content_layout"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_background"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="A propos de l'application"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/about_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="L’application Picoloïd est une adaptation de logiciel développé par l’association IDEE « Picolo 5.0.1 » afin de faciliter la communication et l’autonomie des enfants handicapés et polyhandicapés, le tout sur tablette. Cette application a été développée par cinq étudiants de l’ISEN Lille pendant une période de six semaines dans le cadre de leur projet de M1."
                android:textColor="#000"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/about_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="10dp"
                android:text="Version 1.0 alpha"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/about_content"
                tools:ignore="HardcodedText" />


        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
